#!/usr/bin/env ruby
require 'pathname'
require 'fileutils'
include FileUtils

# path to your application root.
APP_ROOT = Pathname.new File.expand_path('..',  __dir__)

def system!(*args)
   system(*args) || fail("\n== Command #{args} failed ==")
end

def do_not_care_command!(*args)
  system(*args)
end

chdir APP_ROOT do
  # This script is a starting point to setup your application.
  # Add necessary setup steps to this file:

  puts "== Installing dependencies =="
  system!('gem install bundler rake rspec racksh rubocop --conservative')
 
  ENV['BUNDLE_PATH'] = 'vendor/bundle'
  system!('bundle check ') rescue (
      system!('bundle install') &&
      system!('bundle clean')
  )

  puts "\n== Creating Content Paths  =="
  FileUtils.mkpath( [
    "./tmp",
    "./tmp/pids",
    "./tmp/content",
    "./docs",
    "./log",
    "./coverage"
  ], verbose: true)

  puts "\n== Preparing databases =="

  do_not_care_command!('dropdb SknWebApp_development')
  do_not_care_command!('dropdb SknWebApp_production')
  do_not_care_command!('dropdb SknWebApp_test')

  puts "\n== Create Production DB =="
    system!('createdb -T template0 SknWebApp_production')
  puts "\n== Create Development DB =="
    system!('createdb -T template0 SknWebApp_development')
  puts "\n== Create Test DB =="
    system!('createdb -T template0 SknWebApp_test')

  puts "\n== Restore Production DB =="
    system!('psql SknWebApp_production < config/skn-full_postgres_db.sql ')
  puts "\n== Restore Development DB =="
    system!('psql SknWebApp_development < config/skn-full_postgres_db.sql ')
  puts "\n== Restore Test DB =="
    system!('psql SknWebApp_test < config/skn-full_postgres_db.sql ')
  puts "\n== Done Preparing databases =="

  puts "\n== Running RSpec Tests =="
  system!('bundle exec rspec')
  
  puts "Setup Complete\n\n"
end
